
<div class="row">
  <%= form_tag sessions_path, {:class=>"form-signin"} do %>
    <% if flash[:notice] %>
      <div class="alert">
        <button class="close" data-dismiss="alert"></button>
        <%= flash[:notice] %>
      </div>
    <% end %>
    <fieldset>
      <legend>Login Window</legend>
      <div class="row-fluid">
        <div class="input-prepend inside span12"> 
          <span class="add-on"><i class="icon-instagram"></i> </span>
          <input class="span10" id="prependedInput" type="text" id="username" name="username" placeholder="Username">
        </div>
      </div>
      <div class="row-fluid">
        <div class="input-prepend inside span12"> 
          <span class="add-on"><i class="icon-lock"></i></span>
          <input class="span10" id="prependedInput" type="password" id="password" name="password" placeholder="Password">
        </div>
      </div>
      <button class="btn btn-primary" type="submit">Sign in</button>
      <a href="#" class="btn btn-primary">Clear</a>
      <!-- <a href="sign_up" class="btn btn-primary">Register</a> -->
    </fieldset>
  <% end %>
</div>

<script>
  $(document).ready(function(){
//    $('a.reveal-link').trigger('click');
    $("#clear").click(function(event){
      event.preventDefault();
      $('#username').val("");
      $('#password').val("");
//      location.replace("http://localhost:3000");
    })
  });
</script>