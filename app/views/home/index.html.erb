<!-- BEGIN PAGE CONTAINER-->
<div class="page-content">
  <div class="content">  
    <div class="page-title">  
      <h3>Dashboard </h3>   
    </div>
    <div id="container">
      <div class="row-fluid spacing-bottom 2col"> 
        <div class="span3 ">  
          <div class="tiles blue added-margin">
            <div class="tiles-body">
              <div class="controller">            
                <a href="javascript:;" class="reload"></a>
                <a href="javascript:;" class="remove"></a>    
              </div>    
              <div class="tiles-title">
                TOTAL SMS SENT
              </div> 
              <div class="heading">
                <span class="animate-number" data-value="<%= @sms.count %>" data-animation-duration="1000"><%= @sms.count %></span>  
              </div>
              <div class="progress transparent progress-white progress-small no-radius">
                <div class="bar animate-progress-bar" data-percentage="100%"></div>
              </div>          
              <div class="description">
                <i class="icon-custom-up"></i>
                <% unless @last_sms.blank? %>
                  <span class="text-white mini-description ">&nbsp; updated <span class="blend"><%= time_ago_in_words(@last_sms.created_at) %> &nbsp;ago</span></span>
                <% end %>
              </div> 
            </div>  
          </div>
        </div>
        
        <div class="span3 ">
          <div class="tiles green added-margin">
            <div class="tiles-body">
              <div class="controller">                
                <a href="javascript:;" class="reload"></a>
                <a href="javascript:;" class="remove"></a>                  
              </div>    
              <div class="tiles-title">
                STUDENTS
              </div>  
              <div class="heading">
                <span class="animate-number" data-value="<%= @students.count %>" data-animation-duration="1000">
                <%= @students.count %>
                </span>
              </div>
              <div class="progress transparent progress-white progress-small no-radius">
                <div class="bar animate-progress-bar" data-percentage="100%" ></div>
              </div>        
              <div class="description">
                <i class="icon-custom-up"></i>
                <% unless @last_student.blank? %>
                  <span class="text-white mini-description ">&nbsp; updated <span class="blend"><%= time_ago_in_words(@last_student.created_at) %> &nbsp;ago</span></span>
                <% end %>
              </div>  
            </div>
          </div>
        </div>
    
        <div class="span3 ">
          <div class="tiles red added-margin">
            <div class="tiles-body">
              <div class="controller">                
                <a href="javascript:;" class="reload"></a>
                <a href="javascript:;" class="remove"></a>                    
              </div>  
              <div class="tiles-title">
                TEACHING STAFFS
              </div>  
              <div class="heading">
                <span class="animate-number" data-value="<%= @teachers.count %>" data-animation-duration="1200">
                <%= @teachers.count %>
                </span> 
              </div>
              <div class="progress transparent progress-white progress-small no-radius">
                <div class="bar animate-progress-bar" data-percentage="100%" ></div>
              </div>
              <div class="description">
                <i class="icon-custom-up"></i>
                <% unless @last_teacher.blank? %>
                  <span class="text-white mini-description ">&nbsp; updated <span class="blend">
                  <%= time_ago_in_words(@last_teacher.created_at) %> &nbsp;ago</span></span>
                <% end %>
              </div>  
            </div>
          </div>
        </div> 
        
        <div class="span3">
          <div class="tiles purple added-margin">
            <div class="tiles-body">
              <div class="controller">                
                <a href="javascript:;" class="reload"></a>
                <a href="javascript:;" class="remove"></a>                  
              </div>    
              <div class="tiles-title">
                NON TEACHING STAFFS
              </div>  
              <div class="row-fluid">
                <div class="heading">
                  <span class="animate-number" data-value="<%= @non_teachers.count %>" data-animation-duration="700">
                  <%= @non_teachers.count %>
                  </span> 
                </div>
                <div class="progress transparent progress-white progress-small no-radius">
                  <div class="bar animate-progress-bar" data-percentage="100%"></div>
                </div>
              </div>
              <div class="description">
                <i class="icon-custom-up"></i>
                <% unless @last_non_teacher.blank? %>
                  <span class="text-white mini-description ">&nbsp; updated <span class="blend">
                    <%= time_ago_in_words(@last_non_teacher.created_at) %> &nbsp;ago
                  </span></span>
                <% end %>
              </div>
            </div>
          </div>
        </div>      
      </div>
    </div> 

    <div class="row-fluid ">      
      <div class="span4">
        <div class="tiles white">
          <div class="tiles-body">
            <div class="controller">                
              <a href="javascript:;" class="reload"></a>
              <a href="javascript:;" class="remove"></a>
            </div>
            <div class="tiles-title">
              BIRTHDAY BABY <strong><%= Date.today.strftime("%d/%m/%Y") %></strong>
            </div>
            </br>
            <% @birthday_name.each_with_index do |birthday_name, index| %>
              <div class="notification-messages info">
                <div class="message-wrapper">
                  <div class="heading">
                    <%= birthday_name %>
                  </div>
                </div>
                <div class="date pull-right">
                  <%= @birthday_role[index] %>
                </div>
              </div>
            <% end %>           
          </div>
        </div>          
      </div>  
      <div class="span4">
        <div class="tiles white">
          <div class="tiles-body">
            <div class="controller">                
              <a href="javascript:;" class="reload"></a>
              <a href="javascript:;" class="remove"></a>                  
            </div>
            <div class="tiles-title">
              JOB ANNIVERSARY <strong><%= Date.today.strftime("%d/%m/%Y") %></strong>
            </div>              
            </br>
            <% @job_anniversary_name.each_with_index do |job_anniversary_name, index| %>
              <div class="notification-messages info">
                <div class="message-wrapper">
                  <div class="heading">
                    <%= job_anniversary_name %>
                  </div>
                </div>
                <div class="date pull-right">
                  <%= @job_anniversary_role[index] %>
                </div>
              </div>
            <% end %>                
          </div>
        </div>          
      </div>  

      <div class="span4">
        <div class="tiles white">
          <div class="tiles-body">
            <div class="controller">                
              <a href="javascript:;" class="reload"></a>
              <a href="javascript:;" class="remove"></a>                  
            </div>
            <div class="tiles-title">
              WEDDING ANNIVERSARY <strong><%= Date.today.strftime("%d/%m/%Y") %></strong>
            </div>              
            </br>
            <% @wedding_anniversary_name.each_with_index do |wedding_anniversary_name, index| %>
              <div class="notification-messages info">
                <div class="message-wrapper">
                  <div class="heading">
                    <%= wedding_anniversary_name %>
                  </div>
                </div>
                <div class="date pull-right">
                  <%= @wedding_anniversary_role[index] %>
                </div>
              </div>
            <% end %>           
          </div>
        </div>          
      </div>  
    </div>
    <div class="clearfix"></div>
    <br/><br/>
    <div class="row-fluid ">      
      <div class="span12">
        <div class="tiles white">
          <div class="tiles-body">
            <div class="controller">                
              <a href="javascript:;" class="reload"></a>
              <a href="javascript:;" class="remove"></a>                  
            </div>
            <div class="tiles-title">
              LATEST NOTIFICATIONS
            </div>              
            </br>
            <% @sms.each do |sms| %>
              <div class="notification-messages info">
                <div class="message-wrapper">
                  <div class="heading">Message : 
                    <%= sms.message %>
                  </div>
                </div>
                <div class="date pull-right">
                  <%= time_ago_in_words(sms.created_at) %>
                </div>
              </div>
            <% end %>        
          </div>
        </div>          
      </div>  
    </div>
  </div>  
<!-- END PAGE --> 
</div>
