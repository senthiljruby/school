    <%= render 'shared/header/css_files' %>
    <link rel="stylesheet" href="/css/login_checkbox.css" type="text/css" media="screen" charset="utf-8" />
    <script src="/plugins/jquery-1.8.3.min.js" type="text/javascript"></script> 
